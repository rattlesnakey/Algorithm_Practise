{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Build with Clang",
          "type": "shell",
          "command": "clang++",
          "args": [
            "${file}",
                  "-std=c++11",
                  "-o",
                  "${workspaceFolder}/out/${fileBasenameNoExtension}.out",
                  "-g",
                  "--debug"
          ],
          "group": {
            "kind": "build",
            "isDefault": true
          }
        }
      ]
}
